# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-west-2
AWS_PROFILE=default

# ============================================
# Neo4j Graph Database Configuration
# ============================================
# Use your Neo4j Aura instance or local Neo4j
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# ============================================
# AWS Bedrock Model Configuration
# ============================================
# Use inference profiles (required for most regions)
# Choose based on your AWS_REGION:
#   - APAC regions (ap-southeast-1, ap-northeast-1, etc.): apac.anthropic.claude-3-5-sonnet-20241022-v2:0
#   - US regions (us-east-1, us-west-2): us.anthropic.claude-3-5-sonnet-20241022-v2:0
#   - EU regions: eu.anthropic.claude-3-5-sonnet-20241022-v2:0
# See: https://docs.aws.amazon.com/bedrock/latest/userguide/inference-profiles.html
BEDROCK_MODEL_ID=apac.anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_TEMPERATURE=0.5
BEDROCK_MAX_TOKENS=4096

# ============================================
# AgentCore Memory Configuration (Optional)
# ============================================
# Run examples/setup_agentcore_memory.py to create memory resources
# Then set MEMORY_ID to either STM or LTM ID from the output
# MEMORY_ID=mem_abc123xyz

# ============================================
# User Role Configuration
# ============================================
# Options: user, extractor, admin
# - user: Read-only access (graph_agent, analyzer_agent)
# - extractor: Write access (adds extractor_agent)
# - admin: Full access (adds admin_agent)
USER_ROLE=user

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Options for LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Options for LOG_FORMAT: json, text

# ============================================
# Application Configuration
# ============================================
APP_NAME=interlinked-orchestrator
APP_ENV=development

# ============================================
# Optional: AWS Secrets Manager (Production)
# ============================================
# If using AWS Secrets Manager for Neo4j credentials
# SECRET_NAME=interlinked-aos-prod
# SECRET_REGION=us-west-2

# ============================================
# Optional: Cognito Configuration (Future)
# ============================================
# COGNITO_USER_POOL_ID=us-west-2_abc123xyz
# COGNITO_CLIENT_ID=abc123xyz
# COGNITO_REGION=us-west-2

# ============================================
# Optional: Performance Tuning
# ============================================
# Neo4j connection pool settings
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30

# Agent timeouts (seconds)
AGENT_TIMEOUT=60
QUERY_TIMEOUT=30

# ============================================
# Optional: Feature Flags
# ============================================
# Enable/disable specific features
ENABLE_CACHING=true
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true

# ============================================
# Optional: Development Settings
# ============================================
# Enable debug mode for detailed logging
DEBUG=false

# Skip safety checks for development
SKIP_SAFETY_CHECKS=false

# Enable mock data generation
ENABLE_MOCK_DATA=false

